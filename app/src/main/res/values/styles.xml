<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:screenOrientation">portrait</item>

    </style>

    <!--<style name="AppTheme.NoActionBarBack">-->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="android:windowBackground">@null</item>-->
        <!--<item name="android:windowIsTranslucent">false</item>-->
        <!--<item name="android:windowDisablePreview">true</item>-->
    <!--</style>-->

    <!--透明activity-->
    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowBackground">@drawable/img_splash_new</item>
        <!--<item name="android:windowIsTranslucent">true</item>-->
    </style>

    <!--无背景activity-->
    <style name="AppTheme.NoActionBar.Launcher">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 常规对话框样式 -->
    <style name="commondialogstyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 加载对话框样式 -->
    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否允许对话框背景变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--分享弹窗style-->
    <style name="dialog_share" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@style/dialog_share_animation</item>
        <item name="android:background">@null</item>
    </style>

    <style name="dialog_share_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <!--搜索栏style-->
    <style name="SeachDefaultHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="DefaultTextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="DefaultHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <!-- 分割线-->
    <style name="cutting_line">
        <item name="android:layout_width">325dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/color_dcdcdc</item>
    </style>
    <!-- 分割线-->
    <style name="cutting_line_change_psw">
        <item name="android:layout_width">330dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@color/color_dcdcdc</item>
    </style>

    <!-- 语音弹出框样式 -->
    <style name="SoundVolumeStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="text_s13_c66">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/color_666666</item>
    </style>

    <style name="text_s13_c99">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_13</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="text_s15_c33">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/color_333333</item>
    </style>

    <style name="text_s15_c99">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/color_999999</item>
    </style>

    <style name="WaveProgressViewDefault">
        <item name="radius">55dp</item>
        <item name="progress_text_color">#fff</item>
        <item name="progress_text_size">15sp</item>
        <item name="progress_color">@color/color_5ab1e1</item>
        <item name="radius_color">#FF734B58</item>
        <item name="progress">0</item>
        <item name="maxProgress">100</item>
    </style>
</resources>
