<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_login_mm_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:srcCompat="@mipmap/ic_launcher_round" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_login_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:hint="@string/please_input_user_name_or_phone_num"
                android:textSize="@dimen/text_size_16" />

        </LinearLayout>
        <View style="@style/cutting_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
          >

            <TextView
                android:id="@+id/tv_login_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/get_code"
                android:clickable="true"
                android:textColor="@color/colorOrangeBright"
                android:textSize="@dimen/text_size_18"
               />

            <EditText
                android:id="@+id/edt_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/please_input_password"
                android:inputType="textPassword"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
        <View style="@style/cutting_line" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >

            <TextView
                android:id="@+id/tv_login_sms_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:text="@string/use_SMS_verify_login"
                android:clickable="true"
                android:textColor="@color/colorOrangeBright"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_login_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10sp"
                android:clickable="true"
                android:text="@string/forget_password"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_login_button"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/color_999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/other_login_methods"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@color/color_999999" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_login_other_login_QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="65dp"
                android:drawableTop="@drawable/two_login_qq"
                android:gravity="center"
                android:text="@string/qq"
                android:clickable="true"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/tv_login_other_login_wechat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="65dp"
                android:drawableTop="@drawable/two_login_qq"
                android:gravity="center"
                android:text="@string/wechat"
                android:clickable="true"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_login_sign_up_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_toStartOf="@+id/tv_login_other_login_wechat"
                        android:drawableEnd="@drawable/common_btn_back"
                        android:text="@string/sign_up_now"
                        android:clickable="true"
                        android:textSize="@dimen/text_size_18" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>