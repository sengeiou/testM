<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMyMessageChatRvAllBrand"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_dp_10"
    android:background="@drawable/ripple_bg_drawable_white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/llMyMessageChatRvBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg_white"
        android:orientation="horizontal"
        android:padding="@dimen/padding_dp_10"
        >

        <ImageView
            android:id="@+id/tvMyMessageChatRvLogo"
            android:layout_width="@dimen/padding_dp_60"
            android:layout_height="@dimen/padding_dp_60"
            android:src="@drawable/default_img_icon"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_dp_10"
            >

            <TextView
                android:id="@+id/tvMyMessageChatRvBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌名称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"
                />

            <TextView
                android:id="@+id/myMessageChatRvInvestmentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/my_myFollow_investmentAmount"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                />

            <TextView
                android:id="@+id/tvMyMessageChatRvInvestmentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/myMessageChatRvInvestmentAmount"
                android:text="5个"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_18"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMyMessageChatRvBrandSend"
        android:layout_width="100dp"
        android:layout_height="@dimen/padding_dp_27"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/padding_dp_10"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:background="@drawable/ripple_bg_blue0_radius13"
        android:gravity="center"
        android:text="@string/sendBrand"
        android:textColor="@color/colorPrimary"
        />
</LinearLayout>