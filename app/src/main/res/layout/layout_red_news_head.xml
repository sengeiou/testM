<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRedNewsHead"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_dp_42"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/mRedNewsBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_dp_5"
        android:padding="@dimen/padding_dp_10"
        android:src="@drawable/common_btn_back" />

    <TextView
        android:id="@+id/mRedNewsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/padding_dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/mRedNewsMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding_dp_10"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18" />
</RelativeLayout>