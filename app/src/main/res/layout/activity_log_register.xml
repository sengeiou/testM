<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <include layout="@layout/layout_line_no_padding"/>

        <EditText
            android:id="@+id/edt_input_username_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/login_icon_username"
            android:gravity="center_vertical"
            android:hint="@string/please_input_user_name"
            android:maxLength="12"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size_16"/>

        <View style="@style/cutting_line"/>

        <EditText
            android:id="@+id/edt_input_phone_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:layout_marginStart="15dp"
            android:background="@null"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/login_icon_phone"
            android:gravity="center_vertical"
            android:hint="@string/please_input_phone_num"
            android:maxLength="11"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size_16"/>


        <View style="@style/cutting_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45">

            <EditText
                android:id="@+id/edt_input_code_register"
                style="@style/DefaultTextContent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:background="@null"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/login_icon_verification_code"
                android:hint="@string/input_code"
                android:inputType="number"
                android:maxLength="12"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_get_code_register"
                style="@style/DefaultHint"
                android:layout_height="27dp"
                android:layout_marginEnd="@dimen/padding_dp_25"
                android:background="@drawable/shape_login_getcode"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_dp_10"
                android:paddingRight="@dimen/padding_dp_10"
                android:text="@string/getMsg"
                android:textColor="@color/color_5ab1e1"
                android:textSize="@dimen/text_size_16"/>

        </LinearLayout>

        <View style="@style/cutting_line"/>

        <EditText
            android:id="@+id/edt_input_password_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/login_icon_input_pw_s"
            android:hint="@string/enter_password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size_16"/>

        <View style="@style/cutting_line"/>

        <EditText
            android:id="@+id/edt_input_sure_password_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/login_icon_input_pw_s"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="@dimen/text_size_16"/>

        <include layout="@layout/layout_line_no_padding"/>
    </LinearLayout>


    <TextView
        android:id="@+id/btn_register_register"
        android:layout_width="325dp"
        android:layout_marginTop="50dp"
        android:layout_height="@dimen/padding_dp_45"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_loging_button_radius"
        android:textColor="@color/color_ffffff"
        android:textSize="@dimen/text_size_18"
        android:gravity="center"
        android:text="@string/register"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_read_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_icon_not_read_n"/>

        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_accept"
            android:textColor="@color/color_909090"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tv_useragreement_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_agreement"
            android:textColor="@color/color_5ab1e1"
            android:textSize="@dimen/text_size_12"/>
    </LinearLayout>
</LinearLayout>