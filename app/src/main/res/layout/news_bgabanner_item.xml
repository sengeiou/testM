<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <cn.bingoogolapple.bgabanner.BGABanner
        android:id="@+id/news_pager_bgaBanner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_188"
        app:banner_indicatorGravity="bottom|center_horizontal"
        app:banner_isNumberIndicator="false"
        app:banner_pageChangeDuration="800"
        app:banner_placeholderDrawable="@drawable/image_holder"
        app:banner_pointAutoPlayAble="true"
        app:banner_pointAutoPlayInterval="3000"
        app:banner_pointContainerBackground="@color/transparent"
        app:banner_pointContainerLeftRightPadding="@dimen/padding_dp_8"
        app:banner_pointDrawable="@drawable/point_banner"
        app:banner_pointTopBottomMargin="@dimen/padding_dp_8"
        app:banner_tipTextColor="@color/white"
        app:banner_tipTextSize="@dimen/text_size_14"
        app:banner_transitionEffect="alpha">

    </cn.bingoogolapple.bgabanner.BGABanner>

</LinearLayout>
