<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/ivMyMessageChatSendPopScreenshot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:src="@mipmap/search_nothing"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="end|center_vertical"
        >

        <TextView
            android:id="@+id/tvMyMessageChatSendPopSend"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/padding_dp_5"
            android:background="@drawable/ripple_bg_blue_radius5"
            android:gravity="center"
            android:text="@string/send"
            android:textColor="@color/white"
            android:textSize="18sp"
            />
    </LinearLayout>
</RelativeLayout>