<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_10"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_result_bigLogo"
            android:layout_width="@dimen/padding_dp_100"
            android:layout_height="@dimen/padding_dp_100"
            android:layout_marginStart="@dimen/padding_dp_10" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_100"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlSearchResultName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_10">

                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="@dimen/padding_dp_2"-->
                <!--android:src="@drawable/search_result_approve" />-->

                <TextView
                    android:id="@+id/search_result_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlSearchResultName"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:layout_marginTop="@dimen/padding_dp_15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_result_capitalName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_80"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/seach_shop_count"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_12" />


                    <TextView
                        android:id="@+id/search_result_joinStoreNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="9999"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>

                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="horizontal">-->

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/seach_visit_count"-->
                <!--android:textColor="@color/color_666666"-->
                <!--android:textSize="@dimen/text_size_12" />-->

                <!--<TextView-->
                <!--android:id="@+id/search_result_directStoreNum"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginEnd="@dimen/padding_dp_10"-->
                <!--android:gravity="center_vertical"-->
                <!--android:maxLines="1"-->
                <!--android:textColor="@color/color_666666"-->
                <!--android:textSize="@dimen/text_size_12" />-->
                <!--</LinearLayout>-->
            </LinearLayout>


            <com.qingmeng.mengmeng.view.flowlayout.TagFlowLayout
                android:id="@+id/seach_result_tagFliwLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_19"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/padding_dp_10">

            </com.qingmeng.mengmeng.view.flowlayout.TagFlowLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_5"
        android:background="@color/white" />
</LinearLayout>
