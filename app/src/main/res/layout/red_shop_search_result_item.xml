<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_10"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/padding_dp_80"
            android:layout_height="@dimen/padding_dp_100"
            android:layout_marginLeft="@dimen/padding_dp_10"
            android:src="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_38"
                android:layout_marginLeft="@dimen/padding_dp_10">

                <TextView
                    android:layout_width="@dimen/padding_dp_30"
                    android:layout_height="@dimen/padding_dp_16"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="认证"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:text="我是标题 我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题我是标题"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_dp_10"
                android:layout_marginTop="@dimen/padding_dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/my_myFollow_investmentAmount"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="¥12万"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/seach_shop_count"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="3325"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_dp_20"
                    android:gravity="center"
                    android:text="@string/seach_visit_count"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_dp_10"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="3325"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/padding_dp_19"
                android:layout_marginLeft="@dimen/padding_dp_10"
                android:layout_marginTop="16.5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="加盟支持"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="加盟支持"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_11" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="加盟支持"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_11" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_5"
        android:background="@color/white" />
</LinearLayout>
