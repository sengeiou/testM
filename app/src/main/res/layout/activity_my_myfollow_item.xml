<?xml version="1.0" encoding="utf-8"?>
<com.qingmeng.mengmeng.view.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smlMyMyFollowRv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/llMyMyFollowRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_bg_white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_70"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <com.qingmeng.mengmeng.view.RoundImageView
                android:id="@+id/ivMyMyFollowRvLogo"
                android:layout_width="@dimen/padding_dp_40"
                android:layout_height="@dimen/padding_dp_40"
                android:layout_marginStart="@dimen/padding_dp_15"
                android:src="@drawable/default_img_icon"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tvMyMyFollowRvBrandName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品牌名称"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_17"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_dp_8"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_myFollow_cateringType"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/text_size_13"
                        />

                    <TextView
                        android:id="@+id/tvMyMyFollowRvCateringType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="房地产"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/text_size_13"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_myFollow_investmentAmount"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/text_size_13"
                />

            <TextView
                android:id="@+id/tvMyMyFollowRvInvestmentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/padding_dp_10"
                android:text="5个"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_13"
                />
        </LinearLayout>

        <View
            android:id="@+id/viewMyMyFollowRvLine"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_color_e5"
            />
    </LinearLayout>

    <!-- 屏幕右侧外边部分，正常时在屏幕中处于不可见 -->
    <TextView
        android:id="@+id/tvMyMyFollowRvDelete"
        android:layout_width="@dimen/padding_dp_95"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:gravity="center"
        android:text="@string/my_myFollow_cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        />
</com.qingmeng.mengmeng.view.SwipeMenuLayout>