<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_login_mm_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/login_logo" />

        <ImageView
            android:id="@+id/iv_login_mm_logo_ic"
            android:layout_width="wrap_content"
            android:layout_height="162dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/login_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <Button
                android:id="@+id/btn_login_pw"
                android:layout_width="345dp"
                android:layout_height="45dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_login_button_pw"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />

            <Button
                android:id="@+id/btn_login_sms"
                android:layout_width="345dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_login_button_sms"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login_sign_up_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_toStartOf="@+id/tv_login_other_login_wechat"
                android:clickable="true"
                android:drawableEnd="@drawable/common_btn_back"
                android:text="@string/sign_up_now"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="102dp">

                <TextView
                    android:id="@+id/tv_login_other_login_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/wechat"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="102dp">

                <TextView
                    android:id="@+id/tv_login_other_login_QQ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/qq"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>