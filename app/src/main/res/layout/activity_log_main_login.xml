<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_login_mm_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:srcCompat="@drawable/login_logo" />

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/banner_login_main"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/login_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:id="@+id/btn_login_pw_lin"
    android:layout_centerHorizontal="true">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="107dp"
        app:srcCompat="@drawable/login_icon_input_pw_n" />
            <Button
                android:id="@+id/btn_login_pw_main"
                android:layout_width="345dp"
                android:layout_height="45dp"

                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_login_button_pw"
                android:text="@string/use_name_password_login"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/text_size_16" />
</RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login_pw_lin"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_marginStart="104dp"
                    app:srcCompat="@drawable/login_icon_verification_code" />
            <Button
                android:id="@+id/btn_login_sms_main"
                android:layout_width="345dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_login_button_sms"
                android:text="@string/use_sms_verify_login"
                android:textColor="@color/color_5ab1e1"
                android:textSize="@dimen/text_size_16" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_login_sign_up_now_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:layout_toStartOf="@+id/tv_login_other_login_wechat"
                android:clickable="true"
                android:drawableEnd="@drawable/login_icon_now_register"
                android:drawablePadding="5dp"
                android:text="@string/sign_up_now"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">





            <TextView
                android:id="@+id/tv_login_other_login_wechat_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/login_icon_wx"
                android:gravity="center"
                android:text="@string/wechat"
                android:layout_marginStart="102dp"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14" />
            <TextView
                android:id="@+id/tv_login_other_login_qq_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/login_icon_qq"
                android:gravity="center"
                android:layout_marginStart="60dp"
                android:textColor="@color/color_666666"
                android:text="@string/qq"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>