<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginStart="@dimen/padding_dp_10"
    android:layout_marginTop="@dimen/padding_dp_10"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivMyMessageChatRvOtherHead"
        android:layout_width="@dimen/padding_dp_40"
        android:layout_height="@dimen/padding_dp_40"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:background="@drawable/ripple_bg_drawable_white_radius5"
        >

        <TextView
            android:id="@+id/tvMyMessageChatRvOtherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_dp_10"
            android:maxWidth="200dp"
            android:text="你好啊"
            android:textColor="@color/color_333333"
            />

        <ImageView
            android:id="@+id/ivMyMessageChatRvOtherImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"
            android:maxWidth="150dp"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/llMyMessageChatRvOtherAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_dp_5"
            android:gravity="center_vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/padding_dp_50"
                android:layout_height="@dimen/padding_dp_25"
                android:background="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/tvMyMessageChatRvOtherAudioTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_dp_5"
                android:text="5s"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlMyMessageChatRvOtherVideo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:visibility="gone"
            >

            <VideoView
                android:id="@+id/vvMyMessageChatRvOtherVideo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:id="@+id/ivMyMessageChatRvOtherVideoCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/my_settings_aboutus_icon"
                />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>