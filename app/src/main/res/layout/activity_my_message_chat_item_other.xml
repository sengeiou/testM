<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/padding_dp_10"
    >

    <ImageView
        android:id="@+id/ivMyMessageChatRvOtherHead"
        android:layout_width="@dimen/padding_dp_30"
        android:layout_height="@dimen/padding_dp_30"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:background="@drawable/ripple_bg_drawable_white_radius5"
        >

        <TextView
            android:id="@+id/tvMyMessageChatRvOtherText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_dp_10"
            android:text="你好啊"
            />

        <ImageView
            android:id="@+id/ivMyMessageChatRvOtherImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/llMyMessageChatRvOtherAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_dp_10"
            android:gravity="center_vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/padding_dp_50"
                android:layout_height="@dimen/padding_dp_25"
                android:background="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/tvMyMessageChatRvOtherAudioTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_dp_5"
                android:text="5s"
                />
        </LinearLayout>

        <VideoView
            android:id="@+id/vvMyMessageChatRvOtherVideo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>