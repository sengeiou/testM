<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_dp_15"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_dp_10"
    android:paddingEnd="@dimen/padding_dp_10"
    android:paddingStart="@dimen/padding_dp_10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tvMyMyLeavingMessageRvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_dp_11"
            android:paddingTop="@dimen/padding_dp_16"
            android:text="2019-01-04"
            android:textSize="@dimen/text_size_13"
            />

        <TextView
            android:id="@+id/tvMyMyLeavingMessageRvState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_dp_15"
            android:layout_weight="1"
            android:text="@string/my_myLeavingMessage_reply"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_13"
            />

        <LinearLayout
            android:id="@+id/llMyMyLeavingMessageRvDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_dp_9"
            android:padding="@dimen/padding_dp_5"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_5"
                android:text="@string/delete"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/text_size_13"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMyMyLeavingMessageRvLeavingMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="留言的内容留言的内容留，言的内容留言的内容留言
的内容留言的内，容留言的内容留言的内容留言的内
容，内容内。留言的内容，留言的内容留言的内容。
留言的内容留言的内容留言的内容。"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15"
        />

    <RelativeLayout
        android:id="@+id/rlMyMyLeavingMessageRvBrandDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_75"
        android:layout_marginTop="@dimen/padding_dp_15"
        android:background="@drawable/ripple_bg_gray"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivMyMyLeavingMessageRvLogo"
            android:layout_width="@dimen/padding_dp_75"
            android:layout_height="@dimen/padding_dp_75"
            android:layout_marginBottom="0.5dp"
            android:layout_marginTop="0.5dp"
            android:src="@drawable/default_img_icon"
            />

        <TextView
            android:id="@+id/tvMyMyLeavingMessageRvBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_dp_10"
            android:layout_marginTop="@dimen/padding_dp_13"
            android:layout_toEndOf="@+id/ivMyMyLeavingMessageRvLogo"
            android:text="品牌名称"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15"
            />

        <TextView
            android:id="@+id/tvMyMyLeavingMessageRvInvestmentAmountStatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/padding_dp_13"
            android:layout_marginStart="@dimen/padding_dp_10"
            android:layout_toEndOf="@+id/ivMyMyLeavingMessageRvLogo"
            android:text="@string/my_myFollow_investmentAmount"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_12"
            />

        <TextView
            android:id="@+id/tvMyMyLeavingMessageRvInvestmentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvMyMyLeavingMessageRvInvestmentAmountStatic"
            android:layout_alignBottom="@+id/tvMyMyLeavingMessageRvInvestmentAmountStatic"
            android:layout_toEndOf="@+id/tvMyMyLeavingMessageRvInvestmentAmountStatic"
            android:text="5个"
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_12"/>

        <TextView
            android:id="@+id/tvMyMyLeavingMessageRvStoreNumStatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/padding_dp_13"
            android:layout_marginStart="120dp"
            android:layout_toEndOf="@+id/ivMyMyLeavingMessageRvLogo"
            android:text="@string/my_myLeavingMessage_StoreNum"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/text_size_12"
            />

        <TextView
            android:id="@+id/tvMyMyLeavingMessageRvStoreNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvMyMyLeavingMessageRvStoreNumStatic"
            android:layout_alignBottom="@+id/tvMyMyLeavingMessageRvStoreNumStatic"
            android:layout_toEndOf="@+id/tvMyMyLeavingMessageRvStoreNumStatic"
            android:text="5555"
            android:textColor="@color/color_808080"
            android:textSize="@dimen/text_size_12"/>
    </RelativeLayout>
</LinearLayout>