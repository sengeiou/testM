<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <ImageView
        android:id="@+id/notification_update_img_logo"
        android:layout_width="@dimen/padding_dp_40"
        android:layout_height="@dimen/padding_dp_40"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/notification_update_img_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/padding_dp_10"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_notification_delete"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingStart="@dimen/padding_dp_10"
        android:layout_toStartOf="@id/notification_update_img_delete"
        android:layout_toEndOf="@id/notification_update_img_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_update_text_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_dp_5"
            android:text="@string/mengmeng_version_updating"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_16"/>

        <ProgressBar
            android:id="@+id/notification_update_pb_rate"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_margin="@dimen/padding_dp_5"/>

    </LinearLayout>

</RelativeLayout>