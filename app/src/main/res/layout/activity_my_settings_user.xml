<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMySettingsUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_f5"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:id="@+id/llMySettingsUserTips"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_settings_user_no_tips"
            android:textColor="@color/color_999999"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/slMySettingsUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:splitMotionEvents="false"
            >

            <LinearLayout
                android:id="@+id/llMySettingsUserHead"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_60"
                android:background="@drawable/ripple_bg_white"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_head"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_settings_user_head"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <com.qingmeng.mengmeng.view.RoundImageView
                    android:id="@+id/ivMySettingsUserHead"
                    android:layout_width="@dimen/padding_dp_44"
                    android:layout_height="@dimen/padding_dp_44"
                    android:layout_marginEnd="@dimen/padding_dp_12"
                    android:src="@drawable/default_img_icon"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_dp_10"
                    android:src="@mipmap/item_navigation"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_username"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/username"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <TextView
                    android:id="@+id/tvMySettingsUserUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_dp_10"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_15"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_name"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_settings_user_name"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <EditText
                    android:id="@+id/etMySettingsName"
                    style="@style/my_settings_user_edt"
                    android:maxLength="20"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:id="@+id/llMySettingsUserGender"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:background="@drawable/ripple_bg_white"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_gender"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/gender"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <TextView
                    android:id="@+id/tvMySettingsUserGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_dp_10"
                    android:text="@string/my_settings_user_select_no"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_15"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_dp_10"
                    android:src="@mipmap/item_navigation"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/phone"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/phone"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <TextView
                    android:id="@+id/tvMySettingsPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_dp_10"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_15"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_telephone"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_settings_user_telephone"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <EditText
                    android:id="@+id/etMySettingsUserTelephone"
                    style="@style/my_settings_user_edt"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_wechat"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wechat"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <EditText
                    android:id="@+id/etMySettingsUserWechat"
                    style="@style/my_settings_user_edt"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_qq"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qq"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <EditText
                    android:id="@+id/etMySettingsUserQQ"
                    style="@style/my_settings_user_edt"
                    android:inputType="number"
                    android:maxLength="11"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_email"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <com.qingmeng.mengmeng.view.EmailAutoCompleteTextView
                    android:id="@+id/etMySettingsUserEmail"
                    style="@style/my_settings_user_edt"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:id="@+id/llMySettingsUserCity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:background="@drawable/ripple_bg_white"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_city"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_settings_user_city"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <TextView
                    android:id="@+id/tvMySettingsUserCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_dp_10"
                    android:text="@string/my_settings_user_select_no"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_15"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_dp_10"
                    android:src="@mipmap/item_navigation"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:id="@+id/llMySettingsUserMoney"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:background="@drawable/ripple_bg_white"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_money"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_settings_user_money"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <TextView
                    android:id="@+id/tvMySettingsUserMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_dp_10"
                    android:text="@string/my_settings_user_select_no"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_15"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_dp_10"
                    android:src="@mipmap/item_navigation"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@color/page_background_f5"
                />

            <LinearLayout
                android:id="@+id/llMySettingsUserInterestIndustry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:background="@drawable/ripple_bg_white"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="@dimen/padding_dp_40"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/my_settings_user_interestindustry"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/my_settings_user_interestIndustry"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_15"
                    />

                <TextView
                    android:id="@+id/tvMySettingsUserInterestIndustry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/padding_dp_10"
                    android:text="@string/my_settings_user_select_no"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_15"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_dp_10"
                    android:src="@mipmap/item_navigation"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>