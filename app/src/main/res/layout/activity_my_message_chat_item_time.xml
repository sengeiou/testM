<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMyMessageChatRvAllTime"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_dp_20"
    android:gravity="center"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tvMyMessageChatRvTime"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/padding_dp_20"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/view_item_time_bg"
        android:gravity="center"
        android:paddingEnd="13dp"
        android:paddingStart="13dp"
        android:text="今天 11:11"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_12"
        >
    </TextView>
</LinearLayout>