<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:background="@color/white"
                android:paddingStart="@dimen/padding_dp_10"
                android:paddingEnd="@dimen/padding_dp_10"
                android:paddingBottom="@dimen/padding_dp_10">

    <TextView
        android:id="@+id/join_money_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/padding_dp_20"
        android:paddingBottom="@dimen/padding_dp_25"
        android:text="@string/join_money"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_18"/>

    <TextView
        android:id="@+id/money_total_title"
        style="@style/text_s15_c99"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_below="@+id/join_money_title"
        android:text="@string/join_money"/>

    <TextView
        android:id="@+id/money_total_content"
        style="@style/text_s15_c33"
        android:layout_alignBaseline="@+id/money_total_title"
        android:layout_marginStart="@dimen/padding_dp_20"
        android:layout_toEndOf="@+id/money_total_title"
        android:text="100W"/>

    <TextView
        android:id="@+id/money_join_title"
        style="@style/text_s15_c99"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_below="@+id/money_total_title"
        android:layout_marginTop="@dimen/padding_dp_20"
        android:text="@string/join_money_total"/>

    <TextView
        android:id="@+id/money_join_content"
        style="@style/text_s15_c33"
        android:layout_alignBaseline="@+id/money_join_title"
        android:layout_marginStart="@dimen/padding_dp_20"
        android:layout_toEndOf="@+id/money_join_title"
        android:text="100W"/>

    <TextView
        android:id="@+id/money_ensure_title"
        style="@style/text_s15_c99"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_below="@+id/money_join_title"
        android:layout_marginTop="@dimen/padding_dp_20"
        android:text="@string/join_money_ensure"/>

    <TextView
        android:id="@+id/money_ensure_content"
        style="@style/text_s15_c33"
        android:layout_alignBaseline="@+id/money_ensure_title"
        android:layout_marginStart="@dimen/padding_dp_20"
        android:layout_toEndOf="@+id/money_ensure_title"
        android:text="100W"/>

    <TextView
        android:id="@+id/money_equipment_title"
        style="@style/text_s15_c99"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_below="@+id/money_ensure_title"
        android:layout_marginTop="@dimen/padding_dp_20"
        android:text="@string/join_money_equipment"/>

    <TextView
        android:id="@+id/money_equipment_content"
        style="@style/text_s15_c33"
        android:layout_alignBaseline="@+id/money_equipment_title"
        android:layout_marginStart="@dimen/padding_dp_20"
        android:layout_toEndOf="@+id/money_equipment_title"
        android:text="100W"/>

    <TextView
        android:id="@+id/money_other_title"
        style="@style/text_s15_c99"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_below="@+id/money_equipment_title"
        android:layout_marginTop="@dimen/padding_dp_20"
        android:text="@string/join_money_other"/>

    <TextView
        android:id="@+id/money_other_content"
        style="@style/text_s15_c33"
        android:layout_alignBaseline="@+id/money_other_title"
        android:layout_marginStart="@dimen/padding_dp_20"
        android:layout_toEndOf="@+id/money_other_title"
        android:text="100W"/>

    <TextView
        android:id="@+id/join_money_compete"
        android:layout_width="320dp"
        android:layout_height="@dimen/padding_dp_35"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_dialog_detail"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17"/>
</RelativeLayout>