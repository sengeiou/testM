<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:id="@+id/mjoinLinear"
              android:orientation="vertical">

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_join_feedback"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/color_ffffff"
            android:drawableRight="@drawable/join_brand_details"
            android:gravity="center_vertical"
            android:hint="@string/join_feedback_type"
            android:padding="10dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_14"/>

        <EditText
            android:id="@+id/edt_join_feedback"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:background="@null"
            android:gravity="left"
            android:hint="@string/join_feedback_description"
            android:padding="10dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_14"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_join_feedback"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:overScrollMode="never"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_height="70dp"/>
    </LinearLayout>

</LinearLayout>