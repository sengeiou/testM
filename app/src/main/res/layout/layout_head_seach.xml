<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/head_search_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_search_mBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/padding_dp_10"
            android:padding="@dimen/padding_dp_5"
            android:src="@drawable/common_btn_back" />

        <TextView
            android:id="@+id/head_search"
            style="@style/SeachDefaultHint"
            android:layout_marginTop="@dimen/padding_dp_5"
            android:layout_width="@dimen/padding_dp_313"
            android:layout_height="@dimen/padding_dp_30"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/padding_dp_5"
            android:layout_marginStart="@dimen/padding_dp_10"
            android:background="@drawable/bg_seach"
            android:drawablePadding="@dimen/padding_dp_5"
            android:gravity="center_vertical"
            android:hint="@string/seach_hint"
            android:paddingLeft="@dimen/padding_dp_10"
            android:singleLine="true" />

    </LinearLayout>
</RelativeLayout>
