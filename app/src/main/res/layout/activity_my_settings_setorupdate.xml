<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_f5"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:id="@+id/llMySettingsUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/padding_dp_37"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/ivMySettingsSetOrUpdateIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/password"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/etMySettingsSetOrUpdateOld"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:background="@null"
                android:hint="@string/oldPass"
                android:inputType="textPassword"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/page_background_f5"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/padding_dp_37"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/password"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/etMySettingsSetOrUpdateNew"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:background="@null"
                android:hint="@string/newPass"
                android:inputType="textPassword"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/page_background_f5"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="@dimen/padding_dp_37"
                android:layout_height="match_parent"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/password"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/etMySettingsSetOrUpdateNewTwo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_dp_45"
                android:background="@null"
                android:hint="@string/newPassTwo"
                android:inputType="textPassword"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:text="@string/my_settings_setOrUpdate_tips"
        android:textColor="@color/color_808080"
        android:textSize="@dimen/text_size_12"
        />

    <TextView
        android:id="@+id/tvMySettingsSetOrUpdateSave"
        android:layout_width="325dp"
        android:layout_height="@dimen/padding_dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_dp_50"
        android:background="@drawable/ripple_bg_blue_radius5"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        />
</LinearLayout>