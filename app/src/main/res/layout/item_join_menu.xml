<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/padding_dp_60"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/join_menu_icon"
        android:layout_width="@dimen/padding_dp_48"
        android:layout_height="@dimen/padding_dp_48"
        android:src="@drawable/default_img_icon"/>

    <TextView
        android:id="@+id/join_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_15"/>
</LinearLayout>