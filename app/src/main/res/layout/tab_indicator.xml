<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/ly_tab"
                android:layout_width="@dimen/padding_dp_54"
                android:layout_height="@dimen/padding_dp_46"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding_dp_4"
                android:paddingTop="@dimen/padding_dp_4">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/tab_icon"
            android:layout_width="@dimen/padding_dp_24"
            android:layout_height="@dimen/padding_dp_24"
            android:contentDescription="@null"
            android:focusable="false"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tab_titile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/container"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primarybar_txt"
        android:textSize="@dimen/text_size_12"/>

</RelativeLayout>