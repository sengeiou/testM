<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/padding_dp_10"
    android:layout_marginStart="@dimen/padding_dp_10"
    android:orientation="horizontal"
    >

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardCornerRadius="3dp"-->
        <!--app:cardElevation="0dp"-->
        <!--&gt;-->

        <com.qingmeng.mengmeng.view.RoundImageView
            android:id="@+id/ivMyMessageChatRvOtherAudioHead"
            android:layout_width="@dimen/padding_dp_40"
            android:layout_height="@dimen/padding_dp_40"
            android:src="@drawable/default_img_icon"
            />
    <!--</android.support.v7.widget.CardView>-->

    <LinearLayout
        android:id="@+id/llMyMessageChatRvOtherAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:background="@drawable/ripple_bg_drawable_white_radius5"
        android:padding="@dimen/padding_dp_10"
        >

        <ImageView
            android:id="@+id/ivMyMessageChatRvOtherAudioImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tt_voice_play_other"
            />

        <TextView
            android:id="@+id/tvMyMessageChatRvOtherAudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMyMessageChatRvOtherAudioTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/padding_dp_5"
        android:text="5s"
        />
</LinearLayout>