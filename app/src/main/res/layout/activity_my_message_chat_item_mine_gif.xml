<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/padding_dp_10"
    android:layout_marginEnd="@dimen/padding_dp_10"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <ProgressBar
        android:id="@+id/pbMyMessageChatRvMineGifProgress"
        android:layout_width="@dimen/padding_dp_15"
        android:layout_height="@dimen/padding_dp_15"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_dp_5"
        android:layout_marginEnd="@dimen/padding_dp_5"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivMyMessageChatRvMineGifFail"
        android:layout_width="@dimen/padding_dp_15"
        android:layout_height="@dimen/padding_dp_15"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_dp_5"
        android:layout_marginEnd="@dimen/padding_dp_5"
        android:background="@color/red"
        android:visibility="gone"
        />

    <com.mogujie.tt.ui.widget.GifView
        android:id="@+id/ivMyMessageChatRvMineGifImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        />

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:cardCornerRadius="3dp"-->
        <!--app:cardElevation="0dp"-->
        <!--&gt;-->

        <com.qingmeng.mengmeng.view.RoundImageView
            android:id="@+id/ivMyMessageChatRvMineGifHead"
            android:layout_width="@dimen/padding_dp_40"
            android:layout_height="@dimen/padding_dp_40"
            android:src="@drawable/default_img_icon"
            />
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>