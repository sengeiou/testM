<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/padding_dp_10"
    android:layout_marginEnd="@dimen/padding_dp_10"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <ProgressBar
        android:id="@+id/pbMyMessageChatRvMineBrandProgress"
        android:layout_width="@dimen/padding_dp_15"
        android:layout_height="@dimen/padding_dp_15"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_dp_5"
        android:layout_marginEnd="@dimen/padding_dp_5"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivMyMessageChatRvMineBrandFail"
        android:layout_width="@dimen/padding_dp_15"
        android:layout_height="@dimen/padding_dp_15"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_dp_5"
        android:layout_marginEnd="@dimen/padding_dp_5"
        android:background="@color/red"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/llMyMessageChatRvMineBrand"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_dp_10"
        android:background="@drawable/ripple_bg_white_radius5"
        android:orientation="horizontal"
        android:padding="@dimen/padding_dp_10"
        >

        <ImageView
            android:id="@+id/ivMyMessageChatRvMineBrandLogo"
            android:layout_width="@dimen/padding_dp_60"
            android:layout_height="@dimen/padding_dp_60"
            android:src="@drawable/default_img_icon"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_dp_10"
            >

            <TextView
                android:id="@+id/tvMyMessageChatRvMineBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:text="品牌名称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"/>

            <TextView
                android:id="@+id/myMessageChatRvMineBrandAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/my_myFollow_investmentAmount"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_18"
                />

            <TextView
                android:id="@+id/tvMyMessageChatRvMineBrandAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/myMessageChatRvMineBrandAmount"
                android:singleLine="true"
                android:text="5个"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_18"
                />
        </RelativeLayout>
    </LinearLayout>

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:cardCornerRadius="3dp"-->
    <!--app:cardElevation="0dp"-->
    <!--&gt;-->

    <com.qingmeng.mengmeng.view.RoundImageView
        android:id="@+id/ivMyMessageChatRvMineBrandHead"
        android:layout_width="@dimen/padding_dp_40"
        android:layout_height="@dimen/padding_dp_40"
        android:src="@drawable/default_img_icon"
        />
    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>