<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/padding_dp_90"
    android:layout_height="@dimen/padding_dp_90"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/red_shop_right_inImageView"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_height="@dimen/padding_dp_60"
        android:layout_marginTop="@dimen/padding_dp_5"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/red_shop_right_inContent"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_dp_5"
