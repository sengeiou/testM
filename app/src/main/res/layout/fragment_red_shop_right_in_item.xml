<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/padding_dp_20"
              android:layout_marginRight="@dimen/padding_dp_20"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/red_shop_right_inImageView"
        android:layout_width="@dimen/padding_dp_80"
        android:layout_height="@dimen/padding_dp_80"
        android:layout_marginTop="@dimen/padding_dp_12"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/red_shop_right_inContent"
        android:layout_width="@dimen/padding_dp_60"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_dp_13"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:gravity="center"
        android:textSize="@dimen/text_size_14"/>
</LinearLayout>