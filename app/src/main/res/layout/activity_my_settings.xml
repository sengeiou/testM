<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:id="@+id/llMySettingsUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_60"
        android:background="@drawable/ripple_bg_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/ivMySettingsHead"
            android:layout_width="@dimen/padding_dp_50"
            android:layout_height="@dimen/padding_dp_50"
            android:layout_marginStart="@dimen/padding_dp_15"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/tvMySettingsUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_dp_5"
            android:layout_weight="1"
            android:text="用户名"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="@dimen/padding_dp_15"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/llMySettingsUpdatePassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:background="@drawable/ripple_bg_white"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/tvMySettingsNewOrOldPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_15"
                android:layout_weight="1"
                android:text="@string/my_settings_setPassword"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/padding_dp_15"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_1"
            android:layout_marginStart="@dimen/padding_dp_15"
            android:background="@color/page_background"
            />

        <LinearLayout
            android:id="@+id/llMySettingsUpdatePhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:background="@drawable/ripple_bg_white"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_15"
                android:layout_weight="1"
                android:text="@string/my_settings_updatePhone"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/padding_dp_15"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/llMySettingsClearCache"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:background="@drawable/ripple_bg_white"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_15"
                android:layout_weight="1"
                android:text="@string/my_settings_clearCache"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/padding_dp_15"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_1"
            android:layout_marginStart="@dimen/padding_dp_15"
            android:background="@color/page_background"
            />

        <LinearLayout
            android:id="@+id/llMySettingsAboutUs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:background="@drawable/ripple_bg_white"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_15"
                android:layout_weight="1"
                android:text="@string/my_settings_aboutUs"
                />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="@dimen/padding_dp_15"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tvMySettingsExitUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_45"
        android:background="@drawable/ripple_bg_orange"
        android:gravity="center"
        android:text="@string/my_settings_exitUser"
        android:textSize="@dimen/text_size_16"
        />
</LinearLayout>