<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/padding_dp_10"
    android:layout_marginStart="@dimen/padding_dp_10"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/ivMyMessageChatRvOtherVideoHead"
        android:layout_width="@dimen/padding_dp_40"
        android:layout_height="@dimen/padding_dp_40"
        android:src="@mipmap/ic_launcher"
        />

    <RelativeLayout
        android:id="@+id/rlMyMessageChatRvOtherVideo"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/ivMyMessageChatRvOtherVideoCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ImageView
            android:id="@+id/ivMyMessageChatRvOtherVideoStart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/my_settings_aboutus_icon"
            />

        <TextView
            android:id="@+id/tvMyMessageChatRvOtherVideoTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/padding_dp_10"
            android:layout_marginEnd="@dimen/padding_dp_10"
            android:text=""
            />
    </RelativeLayout>
</LinearLayout>