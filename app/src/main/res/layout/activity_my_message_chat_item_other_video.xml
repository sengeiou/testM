<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/padding_dp_10"
    android:layout_marginStart="@dimen/padding_dp_10"
    android:orientation="horizontal"
    >

    <!--<android.support.v7.widget.CardView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:cardCornerRadius="3dp"-->
    <!--app:cardElevation="0dp"-->
    <!--&gt;-->

    <com.qingmeng.mengmeng.view.RoundImageView
        android:id="@+id/ivMyMessageChatRvOtherVideoHead"
        android:layout_width="@dimen/padding_dp_40"
        android:layout_height="@dimen/padding_dp_40"
        android:src="@drawable/default_img_icon"
        />
    <!--</android.support.v7.widget.CardView>-->

    <android.support.v7.widget.CardView
        android:layout_width="130dp"
        android:layout_height="185dp"
        android:layout_marginBottom="@dimen/padding_dp_1"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:layout_marginTop="@dimen/padding_dp_1"
        android:layout_marginEnd="@dimen/padding_dp_1"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp"
        >

        <RelativeLayout
            android:id="@+id/rlMyMessageChatRvOtherVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/ivMyMessageChatRvOtherVideoCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_img_icon"
                />

            <ImageView
                android:id="@+id/ivMyMessageChatRvOtherVideoStart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@drawable/video_start"
                />

            <TextView
                android:id="@+id/tvMyMessageChatRvOtherVideoTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/padding_dp_10"
                android:layout_marginEnd="@dimen/padding_dp_10"
                android:text=""
                android:textColor="@color/white"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>