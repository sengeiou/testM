<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_marginBottom="@dimen/padding_dp_10"
    android:layout_marginEnd="@dimen/padding_dp_10"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <ProgressBar
        android:id="@+id/pbMyMessageChatRvMineAudioProgress"
        android:layout_width="@dimen/padding_dp_15"
        android:layout_height="@dimen/padding_dp_15"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_dp_5"
        android:layout_marginEnd="@dimen/padding_dp_5"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/ivMyMessageChatRvMineAudioFail"
        android:layout_width="@dimen/padding_dp_15"
        android:layout_height="@dimen/padding_dp_15"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/padding_dp_5"
        android:layout_marginEnd="@dimen/padding_dp_5"
        android:background="@color/red"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvMyMessageChatRvMineAudioTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/padding_dp_5"
        android:text="5s"
        />

    <LinearLayout
        android:id="@+id/llMyMessageChatRvMineAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_dp_10"
        android:background="@drawable/ripple_bg_drawable_blue_radius5"
        android:padding="@dimen/padding_dp_10"
        >

        <ImageView
            android:id="@+id/ivMyMessageChatRvMineAudioImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/my_settings"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivMyMessageChatRvMineAudioHead"
        android:layout_width="@dimen/padding_dp_40"
        android:layout_height="@dimen/padding_dp_40"
        android:src="@mipmap/ic_launcher"
        />
</LinearLayout>