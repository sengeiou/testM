<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/padding_dp_102"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/padding_dp_10"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:layout_marginEnd="@dimen/padding_dp_12"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_pager_icon"
            android:layout_width="@dimen/padding_dp_107"
            android:layout_height="@dimen/padding_dp_82"
            android:layout_marginEnd="@dimen/padding_dp_10" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_82"
            android:layout_marginBottom="@dimen/padding_dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_pager_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_dp_7"
                android:singleLine="true"
                android:text="aaaaa"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/news_pager_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_dp_10"
                android:maxLines="2"
                android:text="ahdksahkaks"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/news_pager_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_1"
        android:layout_alignParentBottom="true"
        android:background="@color/color_666666" />
</LinearLayout>

