<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_dp_10"
        android:layout_marginEnd="@dimen/padding_dp_12"
        android:layout_marginStart="@dimen/padding_dp_10"
        android:layout_marginTop="@dimen/padding_dp_10"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/padding_dp_5">

            <ImageView
                android:id="@+id/news_pager_icon"
                android:layout_width="@dimen/padding_dp_107"
                android:layout_height="@dimen/padding_dp_82"
                android:background="@drawable/img_solid_0_5_bg"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_82"
            android:layout_marginStart="@dimen/padding_dp_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_pager_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_dp_4"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/news_pager_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxLines="2"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/news_pager_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_dp_0_5"
        android:background="@color/line_color_e5" />
</LinearLayout>

