<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_background_f5"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_head"/>

    <LinearLayout
        android:id="@+id/llMySettingsUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_dp_10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:text="@string/oldPhone"
                />

            <EditText
                android:id="@+id/etMySettingsUpdatePhoneOld"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="@string/phoneTips"
                android:inputType="phone"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_666666"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/page_background_f5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:text="@string/newPhone"
                />

            <EditText
                android:id="@+id/etMySettingsUpdatePhoneNew"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/phoneTips"
                android:inputType="phone"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_333333"
                />

            <TextView
                android:id="@+id/tvMySettingsUpdatePhoneGetMsg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/padding_dp_10"
                android:text="@string/getMsg"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/page_background_f5"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_dp_45"
            android:gravity="center_vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/my_settings_updatephone_msg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:text="@string/msg"
                />

            <EditText
                android:id="@+id/etMySettingsUpdatePhoneMsg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/padding_dp_10"
                android:background="@null"
                android:hint="@string/my_settings_updatePhone_msgTips"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/color_333333"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMySettingsUpdatePhoneSubmit"
        android:layout_width="325dp"
        android:layout_height="@dimen/padding_dp_45"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/padding_dp_50"
        android:background="@drawable/ripple_bg_blue_radius5"
        android:gravity="center"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        />
</LinearLayout>